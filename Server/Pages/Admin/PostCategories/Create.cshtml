@page
@model Server.Pages.Admin.PostCategories.CreateModel

@{
    var pageTitle =
        $"{Resources.ButtonCaptions.Create} {Resources.DataDictionary.PostCategory}";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<form method="post">

    <section-form>
        <fieldset>
            <section-form-header>
                @(pageTitle)
            </section-form-header>

            <partial name="PartialViews/_DisplayPageMessages" />

            <section-form-field>
                <label asp-for="ViewModel.Title"></label>
                <input asp-for="ViewModel.Title" />
                <span asp-validation-for="ViewModel.Title"></span>
            </section-form-field>

            <section-form-check>
                <input asp-for="ViewModel.IsActive" />
                <label asp-for="ViewModel.IsActive"></label>
            </section-form-check>

            <section-form-check>
                <input asp-for="ViewModel.IsUnDeletable" />
                <label asp-for="ViewModel.IsUnDeletable"></label>
            </section-form-check>

            <section-form-field>
                <label asp-for="ViewModel.ParentId" class="form-label"></label>

                <select asp-for="ViewModel.ParentId" class="form-select">
                    <option value="@(null)">@(Resources.DataDictionary.NoParent)</option>

                    @foreach (var item in Model?.ParentsViewModel)
                    {
                        <option value="@(item.Id)">@(item.Title)</option>
                    }
                </select>

                <span asp-validation-for="ViewModel.ParentId" class="text-danger"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.Ordering"></label>
                <input asp-for="ViewModel.Ordering" />
                <span asp-validation-for="ViewModel.Ordering"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.Description"></label>
                <textarea asp-for="ViewModel.Description"></textarea>
                <span asp-validation-for="ViewModel.Description"></span>
            </section-form-field>
        </fieldset>

        <section-form-buttons>
            <button-create />
            <button-reset />
        </section-form-buttons>

        <section-form-footer>
            <a asp-page="Index">
                @(Html.DtatGetLinkCaptionForList())
            </a>
        </section-form-footer>
    </section-form>

</form>